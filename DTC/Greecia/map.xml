<?xml version="1.0"?>
<map proto="1.2.0">
<name>Greecia</name> <!-- The map's name, shouldn't be too long -->
<version>1.2.0</version> <!-- The map version -->
<objective>Destroy the other team's core before they destroy yours!</objective>
 
<!-- Major map authors. -->
<authors>
    <author>CatchingMC</author> <!-- The creator of the map -->
 
<!-- Map modules, i.e. objectives, regions, spawns. -->
<cores material="obsidian" leak="6">
    <core team="blue"><cuboid min="330,22,-678" max="328,26,-671"/></core>
</cores>
<cores material="obsidian" leak="6">
    <core team="red"><cuboid min="376,22,-653" max="378,26,-655"/></core>
</cores>
<teams>
   <team color="red" max="8" max-overfill="12">Red Team</team>
   <team color="blue" max="8" max-overfill="12">Blue Team</team>
</teams>
<kits>
    <kit name="spawn" force="true">
        <item slot="0">iron sword</item>
        <item slot="8" amount="32">bread</item>
        <potion duration="5" amplifier="1">heal</potion>
    </kit>
    <kit name="red" parents="spawn">
        <helmet color="cd0000">leather helmet</helmet>
        <chestplate>chain chestplate</chestplate>
        <pants color="cd0000">leather pants</pants>
        <boots enchantment="protection fall:2">leather boots</boots>
    </kit>
    <kit name="blue" parents="spawn">
        <helmet color="0066cc">leather helmet</helmet>
        <chestplate>chain chestplate</chestplate>
        <pants color="006cc">leather pants</pants>
        <boots enchantment="protection fall:2">leather boots</boots>
    </kit>
</kits>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemkeep>
    <item>arrow</item>
    <item>spruce log</item>
    <item>red clay</item>
    <item>blue clay</item>
</itemkeep>
<gamerules>
    <doDaylightCycle>false</doDaylightCycle>
</gamerules>
<regions>
    <rectangle name="blue-base" min="306,-665" max="299,-675"/>
    <rectangle name="red-base" min="400,-661" max="407,-651s"/>
    <apply enter="only-blue"><region name="blue-base"/>You may not enter Blue Team's base!</apply>
    <apply enter="only-red"><region name="red-base"/>You may not enter Red Team's base!</apply>
</regions>
<spawns>
    <spawn team="red" kit="red" yaw="90">
        <cuboid min="401,28,660" max="406,29,-652"/>
    </spawn>
    <spawn team="blue" kit="blue" yaw="-90">
        <cuboid min="305,28,-666" max="300,29,-674"/>
    </spawn>
    <default yaw="0">
        <cuboid min="352,38,-626" max="354,39,-624"/>
    </default>
</spawns>
</map>
